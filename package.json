{
  "name": "web-starter-nodejs",
  "version": "1.0.0",
  "description": "A starter web application",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development ts-node ./src/server.ts",
    "start:watch": "NODE_ENV=development nodemon",
    "build": "NODE_ENV=production tsc",
    "gulp:static": "gulp static",
    "test": "jest -c src/test/jest.config.js",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "~4.17.1",
    "govuk-frontend": "~3.6.0",
    "nunjucks": "~3.2.0"
  },
  "devDependencies": {
    "@types/express": "~4.17.3",
    "@types/jest": "~25.1.4",
    "@types/node": "~13.9.1",
    "@types/nunjucks": "~3.1.3",
    "@types/supertest": "~2.0.8",
    "@typescript-eslint/eslint-plugin": "~2.23.0",
    "@typescript-eslint/parser": "~2.23.0",
    "eslint": "~6.8.0",
    "eslint-config-standard": "~14.1.0",
    "eslint-plugin-chai-friendly": "~0.5.0",
    "eslint-plugin-import": "~2.20.1",
    "eslint-plugin-node": "~11.0.0",
    "eslint-plugin-promise": "~4.2.1",
    "eslint-plugin-standard": "~4.0.1",
    "gulp": "~4.0.2",
    "gulp-cli": "~2.2.0",
    "gulp-sass": "~4.0.2",
    "jest": "~25.1.0",
    "node-sass": "~4.13.1",
    "nodemon": "~2.0.2",
    "supertest": "~4.0.2",
    "ts-jest": "~25.2.1",
    "ts-node": "~8.6.2",
    "typescript": "~3.8.3"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts",
    "legacyWatch": true,
    "ignore": [
      "**/*.spec.ts"
    ],
    "exec": "ts-node ./src/server.ts"
  }
}
